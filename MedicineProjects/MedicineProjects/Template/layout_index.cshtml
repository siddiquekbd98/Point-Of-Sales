            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Template/dist/img/avatar3.png" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        @*<p>User</p>*@
