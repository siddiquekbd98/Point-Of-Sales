@model MedicineProjects.ViewModel.DashboardViewModel


@{
    ViewBag.Title = "Home Page";

}







<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
        <div class="small-box bg-blue whitecolor">
            <div class="inner">
                <h3>@Model.medicine_count</h3>
                <p>Total Medicine</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="/Medicine/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
        <div class="small-box bg-red whitecolor">
            <div class="inner">
                <h3>@Model.customer_count</h3>
                <p>Total Customer</p>
            </div>
            <div class="icon">
                <i class="ion ion-person"></i>
            </div>
            <a href="/Customers/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
        <div class="small-box bg-green whitecolor">
            <div class="inner">
                <h3>@Model.medicineSupplier_count</h3>
                <p>Total MedicineSupplier</p>
            </div>
            <div class="icon">
                <i class="fa fa-users"></i>
            </div>
            <a href="/MedicineSuppliers/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
        <div class="small-box bg-aqua whitecolor">
            <div class="inner">
                <h3>@Model.salePoint_count</h3>
                <p>Total SalePoint</p>
            </div>
            <div class="icon">
                <i class="fa fa-home"></i>
            </div>
            <a href="/SalePoints/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
        <div class="small-box bg-purple whitecolor">
            <div class="inner">
                <h3>@Model.medicinePurchase_count</h3>
                <p>Total MedicinePurchase</p>
            </div>
            <div class="icon">
                <i class="fa fa-shopping-bag"></i>
            </div>
            <a href="/MedicinePurchases/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
        <div class="small-box bg-lime whitecolor">
            <div class="inner">
                <h3>@Model.medicineSales_count</h3>
                <p>Total MedicineSales</p>
            </div>
            <div class="icon">
                <i class="fa fa-shopping-cart"></i>
            </div>
            <a href="/MedicineSales/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
        <div class="small-box bg-orange whitecolor">
            <div class="inner">
                <h3>@Model.medicineStock_count</h3>
                <p>Total MedicineStock</p>
            </div>
            <div class="icon">
                <i class="fa fa-shopping-cart"></i>
            </div>
            <a href="/MedicineStocks/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>
 Morris.js charts
<script src="bower_components/raphael/raphael.min.js"></script>
<script src="bower_components/morris.js/morris.min.js"></script>
<script>
  $(function () {
    "use strict";
    //DONUT CHART
    var donut = new Morris.Donut({
      element: 'sales-chart',
      resize: true,
      colors: ["#3c8dbc", "#f56954", "#00a65a"],
      data: [
        {label: "Registered Customer", value: @Model.customer_count},
          { label: "Registered Medicine", value: @Model.medicine_count},
          { label: "Registered MedicineSupplier", value: @Model.medicineSupplier_count},
        { label: "Registered SalePoint", value: @Model.salePoint_count},
          { label: "Registered MedicinePurchase", value: @Model.medicinePurchase_count},
          { label: "Registered MedicineSales", value: @Model.medicineSales_count}

      ],
      hideHover: 'auto'
    });
  });
</script>
