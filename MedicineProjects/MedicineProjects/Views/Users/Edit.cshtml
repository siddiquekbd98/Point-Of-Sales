@model MedicineProjects.Models.TblUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string selectedSuperAdmin = "";
    string selectedGeneralUser = "";
    if (Model.UserType == MedicineProjects.Libs.Utilities.UserType.SuperAdmin.ToString())
    {
        selectedSuperAdmin = "selected";
    }
    else if (Model.UserType == MedicineProjects.Libs.Utilities.UserType.GeneralUser.ToString())
    {
        selectedGeneralUser = "selected";
    }
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserID)

        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserPass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserPass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserPass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="UserType" name="UserType" class="form-control">
                    <option value="@MedicineProjects.Libs.Utilities.UserType.SuperAdmin.ToString()" @selectedSuperAdmin>
                        @MedicineProjects.Libs.Utilities.UserType.SuperAdmin.ToString()
                    </option>
                    <option value="@MedicineProjects.Libs.Utilities.UserType.GeneralUser.ToString()" @selectedGeneralUser>
                        @MedicineProjects.Libs.Utilities.UserType.GeneralUser.ToString()
                    </option>
                </select>
                @Html.ValidationMessageFor(model => model.UserType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
