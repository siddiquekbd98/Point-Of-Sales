@model IEnumerable<MedicineProjects.Models.TblSalePoint>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listTblUserRole = (List<MedicineProjects.Models.TblUserRole>)Session["TblUserRoles"];
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SalePointNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePointName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePointManager)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.SalePointNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SalePointName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SalePointManager)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @if (listTblUserRole.Where(o => o.PageName == "SalePoints" && o.IsUpdate == true).FirstOrDefault() != null)
        {
            <a href="/Products/Edit?id=@item.SalePointID">Edit</a>
        }
        |
        @if (listTblUserRole.Where(o => o.PageName == "SalePoints" && o.IsRead == true).FirstOrDefault() != null)
        {
            @Html.ActionLink("Details", "Details", new { id = item.SalePointID })
        }
        |
        @if (listTblUserRole.Where(o => o.PageName == "SalePoints" && o.IsDelete == true).FirstOrDefault() != null)
        {
            @Html.ActionLink("Delete", "Delete", new { id = item.SalePointID })
        }
    </td>
</tr>
}

</table>
